<div class="text-center mt-6 text-5xl">
  {{totalCount}}
</div>
<div class="mt-6 text-center">
  <button
    type="button"
    class="counter-btn increment-btn disable-double-tap-zoom"
    onclick={{action "increment"}}>
    +
  </button>
</div>
<div class="mt-6 text-center">
  <button
    type="button"
    class="counter-btn decrement-btn disable-double-tap-zoom"
    disabled={{cantDecrement}}
    onclick={{action "decrement"}}>
    -
  </button>
</div>
<div class="mt-6 text-center">
  <button type="button" class="text-2xl" onclick={{action (mut totalCount) 0}}>
    Reset
  </button>
</div>
